<div class='container py-5'>
  <div class='row'>
    <div class='col-12 col-lg-10 col-xl-8 mx-auto'>
      <div class='card mx-auto'>
        <div class='card-body mx-auto' style='width: 350px;'>
          <div class='mb-3 d-block text-center'>
            <h2>新增支出</h2>
            {{> message}}
          </div>
          <form id='record-form' action='/records/new' method='POST'>
            <div class='mb-3'>
              <label for='name' class='mb-2'>名稱</label>
              <input
                type='text'
                id='name'
                name='name'
                value='{{name}}'
                class='form-control'
                placeholder='Enter title'
                required
              />
            </div>
            <div class='mb-3'>
              <label for='date' class='mb-2'>日期</label>
              <input
                type='date'
                id='date'
                name='date'
                value='{{date}}'
                class='form-control'
                placeholder='Enter Date'
                required
              />
            </div>
            <div class='mb-3'>
              <label for='amount' class='mb-2'>金額</label>
              <input
                type='number'
                id='amount'
                name='amount'
                value='{{amount}}'
                class='form-control'
                placeholder='Enter amount'
                required
              />
            </div>
            <div class='mb-3'>
              <label for='categoryId' class='mb-2'>支出類別</label>
              <select
                name='categoryId'
                class='form-select'
                id='categoryId'
                required
              >
                <option value=''>Choose a category...</option>
                {{#each categories}}
                  <option value='{{this._id}}'>{{this.name}}</option>
                {{/each}}
              </select>
            </div>
            <div>
              <button
                type='submit'
                class='w-100 btn btn-primary'
              >確認送出</button>
            </div>
            <div class='d-flex' style='gap: 0.5rem'>
              <a href='/' class='mt-2 w-50'>
                <button
                  id='clear-form-btn'
                  type='button'
                  class='w-100 btn btn-outline-secondary'
                >回上一頁</button></a>
              <button
                id='clear-form-btn'
                type='button'
                class='mt-2 w-50 btn btn-outline-secondary'
                onclick='clearForm()'
              >取消重填</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  function clearForm(){ const formElement =
  document.getElementById("record-form"); formElement.reset() }
</script>